{
    "push": {
      "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "vcs": true,
      "exclude": [
          "LICENSE",
          "README.md",
          "atlas_env.sh",
          "atlas_push.sh",
          "wrapacker"
      ]
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/2016.02.01/archlinux-2016.02.01-dual.iso",
        "iso_checksum": "37427c722ffc57c15fb984287c34d5d48cc84247",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "60m"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-base.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-base.sh<enter>"
            ],
            "disk_size": 20480,
            "hard_drive_interface": "sata",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "sudo systemctl start poweroff.timer"
        },
        {
            "type": "vmware-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-base.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-base.sh<enter>"
            ],
            "disk_size": 20480,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "sudo systemctl start poweroff.timer"
        }
    ],
    "provisioners": [
        {
            "only": ["virtualbox-iso"],
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-virtualbox.sh"
        },
	{
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/lisp-in-small-pieces.sh"
        },
        {
            "only": ["virtualbox-iso", "vmware-iso"],
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/cleanup.sh"
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant"
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "created_at": "{{timestamp}}"
            }
        },
        {
            "type": "atlas",
            "only": ["vmware-iso"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "vmware",
                "created_at": "{{timestamp}}"
            }
        }]
    ]
}
